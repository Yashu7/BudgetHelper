<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:local="BudgetHelper.Styles.BackgroundStyles">
    <Style x:Key="BackgroundBoxViewStyle" TargetType="{x:Type BoxView}">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush>
                    <GradientStop Color="#23D5AB" Offset="0.3"/>
                    <GradientStop Color="#23A605" Offset="0.5" />
                    <GradientStop Color="#E73C7E" Offset="0.7" />
                    <GradientStop Color="#EE7752" Offset="1.0" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>