<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             NavigationPage.HasNavigationBar="false" 
             x:Class="BudgetHelper.Pages.MainPage">
    <ContentPage.Content>
        <Grid>
            <BoxView x:Name="bdGradient" Scale="4" AnchorX="1" AnchorY="0" Style="{StaticResource BackgroundBoxViewStyle}"/>
            <Frame WidthRequest="250"  BorderColor="White" BackgroundColor="Transparent"
                   VerticalOptions="Center" HorizontalOptions="Center" >
                <Label Text="ANIMATED GRADIENT BACKGROUND" TextColor="White"
                           HorizontalTextAlignment="Center" FontSize="30"/>
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding TappedMainFrame}"/>
                </Frame.GestureRecognizers>
            </Frame>
        </Grid>
    </ContentPage.Content>
</ContentPage>