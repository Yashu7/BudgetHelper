<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             NavigationPage.HasNavigationBar="false" 
             x:Class="BudgetHelper.Pages.StartPage">
    <ContentPage.Content>
        <Grid>
            <BoxView x:Name="bdGradient" Scale="4" AnchorX="1" AnchorY="0" Style="{StaticResource BackgroundBoxViewStyle}"/>
            <Frame Style="{StaticResource MainButtonBlackFrame}">
                <Label Text="LOGIN" TextColor="Black"
                       HorizontalTextAlignment="Center" FontSize="20"/>
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavigateToMainPageCommand}"/>
                </Frame.GestureRecognizers>
            </Frame>
        </Grid>
    </ContentPage.Content>
</ContentPage>